{% extends '@nucleus/partials/particle.html.twig' %}

{% set gpscript %}
	(function() {
		var header = document.querySelector("{{ particle.headerId|default('#g-header') }}");

		var headroom = new Headroom(header, {
			tolerance: {
			  down : 0,
			  up : 0
			},
			offset : 300
		});
		headroom.init();
	}());
{% endset %}

{% do gantry.document.addScript(url('gantry-theme://js/gp_headroom.min.js'), 0, 'footer') %}
{% do gantry.document.addInlineScript(gpscript, 0, 'footer') %}
