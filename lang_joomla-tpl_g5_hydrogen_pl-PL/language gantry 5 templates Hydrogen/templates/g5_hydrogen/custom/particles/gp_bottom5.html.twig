{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_bottom5 {{ particle.class }}">
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% set gp_top %}
    <div class="g-grid">
        {% if particle.menu1_title %}
            <div class="g-block">
                <div class="gp_content">
                    <h3>{{ particle.menu1_title|raw }}</h3>
                    {% if particle.menu1_item %}
                        <ul>
                            {% for menu1 in particle.menu1_item %}
                                <li><a href="{{ menu1.url|e }}" target="{{ menu1.target|e }}">{{ menu1.name|e }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if particle.menu2_title %}
            <div class="g-block">
                <div class="gp_content">
                    <h3>{{ particle.menu2_title|raw }}</h3>
                    {% if particle.menu2_item %}
                        <ul>
                            {% for menu2 in particle.menu2_item %}
                                <li><a href="{{ menu2.url|e }}" target="{{ menu2.target|e }}">{{ menu2.name|e }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if particle.menu3_title %}
            <div class="g-block">
                <div class="gp_content">
                    <h3>{{ particle.menu3_title|raw }}</h3>
                    {% if particle.menu3_item %}
                        <ul>
                            {% for menu3 in particle.menu3_item %}
                                <li><a href="{{ menu3.url|e }}" target="{{ menu3.target|e }}">{{ menu3.name|e }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if particle.menu4_title %}
            <div class="g-block">
                <div class="gp_content">
                    <h3>{{ particle.menu4_title|raw }}</h3>
                    {% if particle.menu4_item %}
                        <ul>
                            {% for menu4 in particle.menu4_item %}
                                <li><a href="{{ menu4.url|e }}" target="{{ menu4.target|e }}">{{ menu4.name|e }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if particle.menu5_title %}
            <div class="g-block">
                <div class="gp_content">
                    <h3>{{ particle.menu5_title|raw }}</h3>
                    {% if particle.menu5_item %}
                        <ul>
                            {% for menu5 in particle.menu5_item %}
                                <li><a href="{{ menu5.url|e }}" target="{{ menu5.target|e }}">{{ menu5.name|e }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endset %}

{% set start_date = particle.date.start|trim in ['now', ''] ? 'now'|date('Y') : particle.date.start|e %}
{% set end_date = particle.date.end|trim in ['now', ''] ? 'now'|date('Y') : particle.date.end|e %}

{% set gp_bottom %}
    <div class="g-grid gp_center">
        <div class="g-block size-70">
            <div class="gp_content">
                <div class="gp_desc">{{ particle.footer_desc|raw|nl2br }} </div>
            </div>
        </div>

        <div class="g-block size-30">
            <div class="gp_content">
                <div class="gp_social">
                    {% for social in particle.social_icons %}
                        <a href="{{ social.url|e }}" target="{{ social.target|e }}"><i class="{{ social.icon|e }}"></i></a>
                    {% endfor %}
                </div>
                {% if particle.owner %}
                    <div class="gp_copyright">
                        &copy;
                        {% if (start_date != end_date) %}{{ start_date|e }} - {% endif %}
                        {{ end_date|e }}
                        {{ particle.owner|raw }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endset %}

{% block particle %}
	{{ containerblock_start }}
        <div class="gp_bottom_top">
            {{ gp_top }}
        </div>
        <div class="gp_divider"></div>
        <div class="gp_bottom_bottom">
            {{ gp_bottom }}
        </div>
	{{ containerblock_end }}
{% endblock %}