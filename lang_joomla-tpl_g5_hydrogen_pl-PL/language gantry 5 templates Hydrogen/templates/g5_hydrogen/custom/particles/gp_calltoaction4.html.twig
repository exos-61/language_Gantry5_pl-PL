{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_cta4 {{ particle.class }}">
		{% if particle.bg_img and particle.bg_mask %}
			<div class="gp_mask"></div>
		{% endif %}
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% block stylesheets %}
	<style type="text/css">
		#{{ id }} {
			{% if particle.bg_color %}
				background-color: {{ particle.bg_color|e }};
			{% endif %}
			{% if particle.bg_img %}
				background-image: url("{{ url(particle.bg_img)|e }}");
				background-position: center center;
				background-repeat: no-repeat;
				background-size: cover;
			{% endif %}
			{% if particle.border_color %}
				border: 1px solid {{ particle.border_color|e }};
			{% endif %}
			{% if particle.border_left_color %}
				border-left: 3px solid {{ particle.border_left_color|e }};
			{% endif %}
			{% if particle.text_color %}
				color: {{ particle.text_color|e }};
			{% endif %}
			{% if particle.padding %}
				padding: {{ particle.padding|e }};
			{% endif %}
			{% if particle.shadow %}
				box-shadow: {{ particle.shadow|e }};
				-webkit-box-shadow: {{ particle.shadow|e }};
			{% endif %}
			{% if particle.font_size %}
				font-size: {{ particle.font_size|e }};
			{% endif %}
		}
		{% if particle.text_color %}
			#{{ id }} h1, #{{ id }} h2, #{{ id }} h3, #{{ id }} h4 {
				color: {{ particle.text_color|e }};
			}
		{% endif %}
		{% if particle.bg_img and particle.bg_mask %}
			#{{ id }} .gp_mask {
				background: {{ particle.bg_mask_color|default('#000000') }};
				opacity: {{ particle.bg_mask|e }};
			}
		{% endif %}
	</style>
{% endblock %}

{% block particle %}
	{{ containerblock_start }}
		<div class="gp_content">
			{% if particle.title or particle.desc %}
				<div class="gp_content_left">
					{% if particle.title %}
						<{{ particle.title_tag|e }} style="margin-top:0; margin-bottom:15px;">{{ particle.title|raw }}</{{ particle.title_tag|e }}>
					{% endif %}

					{% if particle.desc %}
						<div>{{ particle.desc|raw }}</div>
					{% endif %}
				</div>
			{% endif %}

			{% if particle.button_text %}
				<div class="gp_content_right">
					<a href="{{ particle.button_url|e }}" target="{{ particle.button_target }}" class="{{ particle.button_class|e }}">{{ particle.button_text|raw }} </a>
				</div>
			{% endif %}
		</div>
	{{ containerblock_end }}
{% endblock %}