{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_infobanner3 {{ particle.class }}">
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% set gp_contents %}
	{% for item in particle.gp_items %}
		<div class="g-block size-{{ particle.columns|e }} {{ item.class }}">
            <div class="gp_content">
                {% if item.link_url %}<a href="{{ item.link_url|e }}">{% endif %}
                    <div class="gp_img">
                        <img src="{{ url(item.img)|e }}" alt="{{ item.img_alt|e }}">
                        {% if item.title %}
                            <h2>{{ item.title|raw }}</h2>
                        {% endif %}
                    </div>
                {% if item.link_url %}</a>{% endif %}    
            </div>
		</div>
	{% endfor %}
{% endset %}

{% block particle %}
	{{ containerblock_start }}
        {% if particle.gp_items %}
            <div class="g-grid">
                {{ gp_contents }}
            </div>
        {% endif %}
	{{ containerblock_end }}
{% endblock %}