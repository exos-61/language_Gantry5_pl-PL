            {% endif %}
        }
        {% if particle.t3_text %}
            #{{ id }} .gp_table3 h4 {
                color: {{ particle.t3_text|e }};
            }
        {% endif %}
        #{{ id }} .gp_table3 .gp_btn {
            {% if particle.t3_btn %}
                background-color: {{ particle.t3_btn|e }};
            {% endif %}
            {% if particle.t3_btn_text %}
                color: {{ particle.t3_btn_text|e }};
            {% endif %}
        }
        #{{ id }} .gp_table3 .gp_btn:hover {
            {% if particle.t3_btn_hover %}
                background-color: {{ particle.t3_btn_hover|e }};
            {% endif %}
            {% if particle.t3_btn_text_hover %}
                color: {{ particle.t3_btn_text_hover|e }};
            {% endif %}
        }
    </style>
{% endblock %}

{% block particle %}
	{{ containerblock_start }}
        <div class="gp_items{% if not particle.t3_title %} gp_tablecount2{% endif %}">
            {{ gp_heading }}
            {{ gp_contents }} 
            {{ gp_note }}
        </div>
	{{ containerblock_end }}
{% endblock %}