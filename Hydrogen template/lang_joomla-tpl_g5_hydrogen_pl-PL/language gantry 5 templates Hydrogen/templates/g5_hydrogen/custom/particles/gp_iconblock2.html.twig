{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_iconblock2 {{ particle.class }}">
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% set gp_contents %}
	{% for item in particle.gp_items %}
		<div class="g-block size-{{ particle.columns }} {{ item.class }} {{ item.variations }}">
			<div class="gp_content">
				<div class="g-grid">
					<div class="g-block size-30">
						{% if item.icon %}
							<i class="{{ item.icon }} gp_icon" style="color: {{ item.icon_color|e }};"></i>
						{% endif %}
					</div>
					<div class="g-block size-70">
						{% if item.title %}
							<h4>{{ item.title|raw }}</h4>
						{% endif %}
						{% if item.description %}
							<div>{{ item.description|raw }}</div>
						{% endif %}
				  {% if item.link_url %}
					 <div class="gp_link"><a href="{{ item.link_url|e }}">{{ item.link_text|raw }}</a></div>
				  {% endif %}
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endset %}

{% block stylesheets %}
	<style type="text/css">
		{% if particle.mobile_padding %}
			@media only all and (max-width: 767px) {
				#{{ id }} {
					padding: {{ particle.mobile_padding|e }} !important;
				}
			}
		{% endif %}
		#{{ id }} {
			{% if particle.text_color %}
				color: {{ particle.text_color|e }};
			{% endif %}
			{% if particle.padding %}
				padding: {{ particle.padding|e }};
			{% endif %}
			{% if particle.font_size %}
				font-size: {{ particle.font_size|e }};
			{% endif %}
		}
		#{{ id }} .gp_heading {
			text-align: {{ particle.heading_text_align|e }};
		}
		{% if particle.text_color %}
			#{{ id }} h4 {
				color: {{ particle.text_color|e }};
			}
		{% endif %}
		#{{ id }} .gp_content {
			background: {{ particle.block_bg|e }};
		}
		 #{{ id }} .gp_icon {
			opacity: {{ particle.icon_opacity|default('0.6') }};
		 }
	</style>
{% endblock %}

{% block particle %}
	{{ containerblock_start }}
		<div class="g-grid">
			{% if particle.gp_items %}
				{{ gp_contents }}
			{% endif %}
		</div>
		{{ gp_buttons }}
	{{ containerblock_end }}
{% endblock %}