{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_infobanner1 {{ particle.class }}">
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% set gp_contents %}
	{% for item in particle.gp_items %}
		<div class="g-block size-50 gp_toplevel {{ item.class }}">
            <div class="gp_content" style="background:{{ item.bgColor|e }};color:{{ item.txtColor|e }};">
                <div class="g-grid gp_sublevel">
                    <div class="g-block size-50 gp_desc_block">
                        <div class="gp_desc_inner">
                            {% if item.title %}
                                <h2 style="color:{{ item.txtColor|e }};">{{ item.title|raw }}</h2>
                            {% endif %}
                            {% if item.description %}
                                <div class="gp_desc">{{ item.description|raw }}</div>
                            {% endif %}
                            {% if item.link_url %}
                                <div class="gp_btn"><a href="{{ item.link_url|e }}" style="border-color:{{ item.link_color|e }};color:{{ item.link_color|e }};">{{ item.link_text|raw }}</a></div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="g-block size-50 gp_img_block">
                        <div class="gp_img">
                            <img src="{{ url(item.img)|e }}" alt="{{ item.img_alt|e }}">
                        </div>
                    </div>
                </div>
            </div>
		</div>
	{% endfor %}
{% endset %}

{% block particle %}
	{{ containerblock_start }}
        {% if particle.gp_items %}
            <div class="g-grid">
                {{ gp_contents }}
            </div>
        {% endif %}
	{{ containerblock_end }}
{% endblock %}