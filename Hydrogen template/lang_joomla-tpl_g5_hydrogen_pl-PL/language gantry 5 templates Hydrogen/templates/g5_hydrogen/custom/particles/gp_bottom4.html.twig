{% extends '@nucleus/partials/particle.html.twig' %}

{% set containerblock_start %}
	<div id="{{ id }}" class="gp_bottom4 {{ particle.class }}">
{% endset %}

{% set containerblock_end %}
	</div>
{% endset %}

{% set start_date = particle.date.start|trim in ['now', ''] ? 'now'|date('Y') : particle.date.start|e %}
{% set end_date = particle.date.end|trim in ['now', ''] ? 'now'|date('Y') : particle.date.end|e %}


{% set gp_content %}
    <div class="g-grid">
        <div class="g-block size-50">
            <div class="gp_content">
                &copy;
                {% if (start_date != end_date) %}{{ start_date|e }} - {% endif %}
                {{ end_date|e }}
                {{ particle.owner|raw }}
            </div>
        </div>
        <div class="g-block size-50">
            <div class="gp_content">
                <ul>
                    {% for hmenu in particle.horiz_menu %}
                        <li><a href="{{ hmenu.url|e }}" target="{{ hmenu.target|e }}">{{ hmenu.name|e }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endset %}

{% block particle %}
	{{ containerblock_start }}
        {{ gp_content }}
	{{ containerblock_end }}
{% endblock %}